<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:top="-1dp">
        <shape android:shape="rectangle">

            <!-- 背景色 -->
            <!--<solid android:color="@drawable/gradient_black_lengthwise" />-->
            <gradient
                android:angle="90"
                android:endColor="#00000000"
                android:startColor="#CBBE00"
                android:type="linear" />
            <!-- 角丸 (8dpで設定) -->
            <!--corners android:radius="8dp" /-->
            <stroke
                android:width="1dp"
                android:color="#3F3F3F" />
        </shape>
    </item>
</layer-list>
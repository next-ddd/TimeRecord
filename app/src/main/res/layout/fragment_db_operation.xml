<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.co.tennti.timerecord.EditFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contentImageView"
        android:scaleType="fitCenter"/>
    <!--TextView
        android:id="@+id/evacuationDateTextView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:layout_gravity="left|center_vertical"
        android:gravity="center"
        android:layout_above="@+id/evacuationButton"
        android:layout_centerHorizontal="true" /-->

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/dbZipButton"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <!-- スクロール -->
    <ScrollView
        android:id="@+id/tableScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_toEndOf="@+id/dbZipButton"
        android:layout_below="@+id/dbZipButton">
        <!-- データ表示用TableLayout -->
        <TableLayout
            android:id="@+id/tableConfirmList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/deleteDBFileButton"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/dropTableButton"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/deleteDBFileButton"
        android:layout_toStartOf="@+id/tableScrollView" />
</RelativeLayout>

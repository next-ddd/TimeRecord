<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.co.tennti.timerecord.EditFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contentImageView"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/editDateTextView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:layout_gravity="left|center_vertical"
        android:gravity="center"
        android:layout_above="@+id/evacuationButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/evacuationButton"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/deleteButtonEvacuation"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/editDateTextView"
        android:layout_marginBottom="60dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/deleteDirButtonEvacuation"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/deleteButtonEvacuation"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
